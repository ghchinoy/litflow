{
  "name": "@ghchinoy/litflow",
  "version": "0.2.0",
  "description": "xyflow core integrated with Lit WebComponents",
  "license": "MIT",
  "author": "G. Hussain Chinoy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghchinoy/litflow.git"
  },
  "main": "./dist/litflow.js",
  "module": "./dist/litflow.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/litflow.js"
    },
    "./theme": {
      "types": "./dist/theme.d.ts",
      "import": "./dist/theme.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "docs:dev": "pnpm --dir docs dev",
    "docs:build": "pnpm --dir docs build",
    "build": "vite build && pnpm build:types",
    "build:types": "tsc --project tsconfig.types.json",
    "prepublishOnly": "pnpm run build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@lit-labs/signals": "^0.2.0",
    "@xyflow/system": "^0.0.74",
    "d3-drag": "^3.0.0",
    "d3-interpolate": "^3.0.1",
    "d3-selection": "^3.0.0",
    "d3-zoom": "^3.0.0",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@types/d3-drag": "^3.0.7",
    "@types/d3-interpolate": "^3.0.4",
    "@types/d3-selection": "^3.0.11",
    "@types/d3-zoom": "^3.0.8",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
