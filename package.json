{
  "name": "@ghchinoy/litflow",
  "version": "0.3.0",
  "description": "xyflow core integrated with Lit WebComponents",
  "homepage": "https://litflow.dev",
  "license": "MIT",
  "author": "G. Hussain Chinoy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghchinoy/litflow.git"
  },
  "main": "./dist/litflow.js",
  "module": "./dist/litflow.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/litflow.js"
    },
    "./theme": {
      "types": "./dist/theme.d.ts",
      "import": "./dist/theme.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "docs:prepare": "mkdir -p docs/src/public && cp dist/litflow.js docs/src/public/ && cp dist/theme.js docs/src/public/",
    "docs:sync": "./scripts/sync-docs-examples.sh",
    "docs:dev": "pnpm docs:prepare && (pnpm --dir docs dev & sleep 2 && pnpm docs:sync)",
    "docs:build": "pnpm docs:prepare && pnpm --dir docs build && pnpm docs:sync",
    "test": "vitest run",
    "build": "vite build && pnpm build:types",
    "build:types": "tsc --project tsconfig.types.json",
    "prepublishOnly": "pnpm run build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@breadboard-ai/types": "^0.8.0",
    "@breadboard-ai/utils": "^0.0.2",
    "@lit-labs/signals": "^0.2.0",
    "@xyflow/system": "^0.0.74",
    "d3-drag": "^3.0.0",
    "d3-interpolate": "^3.0.1",
    "d3-selection": "^3.0.0",
    "d3-zoom": "^3.0.0",
    "idb": "^8.0.3",
    "lit": "^3.3.2",
    "littlezipper": "^0.1.5",
    "signal-polyfill": "^0.2.2",
    "signal-utils": "^0.21.1"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@types/d3-drag": "^3.0.7",
    "@types/d3-interpolate": "^3.0.4",
    "@types/d3-selection": "^3.0.11",
    "@types/d3-zoom": "^3.0.8",
    "@vitest/browser": "^4.0.16",
    "@web/test-runner-playwright": "^0.11.1",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
